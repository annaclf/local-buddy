<div class="container">
  
  <div class="row vh-100 align-items-center top-section">
    
    <div class="col-md-6 col-lg-5 mx-auto">
      <section class="login-form text-center">
        <form method="post" action="/login" role="login" class="user-form">
          
          <img src="http://via.placeholder.com/150x90" class="img-fluid mb-5" alt="Logo">

          <input type="email" name="email" placeholder="Email" required class="form-control input-lg">
          <input type="password" class="form-control input-lg" id="password" placeholder="Password" required>          
          
          <button type="submit" name="go" class="btn btn-lg btn-primary btn-block">Sign in</button>
          <div>
            <a href="/signup">Create account</a> or <a href="#">reset password</a>
          </div>
        </form>
      </section>  
      </div>
    
  </div>    
  
</div>