<div class="container mb-5 mt-3">
  <div class="row vh-100 align-items-center">
    
    <div class="col-md-7 col-lg-5 mx-auto">
      <div class="form-top">
        <div class="d-flex flex-column">
          <img src="http://via.placeholder.com/75x45" class="img-fluid align-self-end" alt="Logo" />
          <h1>Sign up</h1>
        </div>
      </div>

      <section class="user-form">
        <form method="post" action="/signup" role="register">
          <div class="form-group">
            <h2>Basic information</h2>
            <input type="text" name="username" placeholder="Username" class="form-control input-lg" required>
            <input type="password" name="password" class="form-control input-lg" id="password" placeholder="Password" required>          
            <input type="email" name="email" placeholder="Email" class="form-control input-lg" required>
          </div>
       
          <div class="form-group">
            <h2 class="text-center">Everything ready?</h2>
            <button type="submit" name="go" class="btn btn-lg btn-primary btn-block">Sign up</button>
            <div class="text-center">
              <p>Already have an account? <a href="/login">Log in</a></p>
            </div>
          </div>
        </form>
      </section> 

      
        <aside class="errormessage text-center mt-4">
          {{#if messages.length}}
              {{#each messages}}<p>{{this}}</p>{{/each}}
          {{/if}}

        </aside>  
        
    </div>
  </div>    
</div>