<a href="/buddies/{{this.id}}">
  <div class="card">
    <div class="card-top">
      <div style="background: linear-gradient(to bottom, rgba(0,0,0,0),rgba(0,0,0,0), rgba(0,0,0,1)), url('{{this.avatarUrl}}') no-repeat center; background-size: cover;" class="avatar-img container">

        <h2 class="align-end">{{this.fullname}}</h5>
      
      </div>
    </div>

    <div class="card-body">
        <p class="">{{this.city}}</p>
      <p class="highlights"><i>{{this.highlights}}</i></p>
      <p class="bio">{{this.biography}}</p>

    </div>
  </div>
</a>