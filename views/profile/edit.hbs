<div class="container">
  
  <div class="row vh-90 align-items-center top-section">
    
    <div class="col-md-5 mx-auto">
      <div class="form-top">
        <div class="d-flex flex-column">
          <h2>Edit your profile</h2>
        </div>
      </div>
      <section class="user-form">
        <form method="post" action="/profile/edit" role="register">
          <div class="form-group">
            <h2>Basic information</h2>
            <input type="text" name="username" placeholder="Username"  class="form-control input-lg"  value="{{this.username}}">
            <input type="password" class="form-control input-lg" id="password" placeholder="Password" >          
            <input type="email" name="email" placeholder="Email"  class="form-control input-lg" value="{{this.email}}" >
          </div>
          {{!-- <div class="form-group">
            <input type="file" name="avatarUrl" class="form-control" placeholder="Upload your profile pic" aria-label="Upload profile pic">
          </div> --}}
          <div class="form-group">
            <h2>About me</h2>
            <input type="text" name="fullname" placeholder="Full name"  class="form-control input-lg"  value="{{this.fullname}}">
            <input type="text" name="city" placeholder="City" class="form-control input-lg" value="{{this.city}}">
            <input type="text" name="age"  placeholder="Age" class="form-control input-lg" value="{{this.age}}">          
            <select class="form-control mr-sm-2" id="categories" name="category"  value="{{this.category}}">
              <option selected>Choose your favourite category</option>
              <option value="Music">Music</option>
              <option value="Sports">Sports</option>
              <option value="Party">Party</option>
              <option value="Food">Food</option>
              <option value="Culture">Culture</option>
              <option value="Leisure">Leisure</option>
              <option value="Games">Games</option>
              <option value="Other">Other</option>
            </select>
            <input type="text" name="highlights" placeholder="Resume your interests in 60 chars" maxlength="60" class="form-control input-lg"  value="{{this.highlights}}">
            <textarea class="form-control" placeholder="Add a small bio, max 200 chars" name="biography" rows="5"  value="">{{this.biography}}</textarea>
            <select class="form-control mr-sm-2" id="typeBeds" name="typeBeds"  value="{{this.typeBeds}}">
              <option selected>What kind of bed can you offer?</option>
              <option value="Couch">Couch</option>
              <option value="Single Bed">Single Bed</option>
              <option value="Double Bed">Double Bed</option>
            </select>
            <input type="number" name="bedsNumber" placeholder="How many beds can you offer?" class="form-control input-lg" value="{{this.bedsNumber}}">          
            <input type="text" name="transport" placeholder="Type if you have a car or other transport" class="form-control input-lg" value="{{this.transport}}">          
          </div>
          <div class="form-group">
            <h2>Everything ready?</h2>
            <button type="submit" name="go" class="btn btn-lg btn-primary btn-block">Update info</button>
          </div>
        </form>
      </section>  
      </div>
    
  </div>    
  
  
</div>